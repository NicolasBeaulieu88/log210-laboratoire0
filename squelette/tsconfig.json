{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "dist",
    "esModuleInterop": true,
    "sourceMap": true,
    "incremental": true,
    "skipLibCheck": true,
    "typeRoots": ["src/types", "node_modules/@types"]
  },
  "include": [
    "src/**/*.ts",
    "global.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}